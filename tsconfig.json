{
    "compilerOptions": {
        "target": "es6",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "rootDir": "src",
        "baseUrl": "src",
        "paths": {
            "@/*": ["*"]
        },
        "allowJs": true,
        "esModuleInterop": true,
        "strict": false,
        "noFallthroughCasesInSwitch": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": false,
        "jsx": "react-jsx"
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
    ],
}